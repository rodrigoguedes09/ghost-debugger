{
  "name": "kilo-ghost",
  "version": "1.0.0",
  "description": "Ghost Debugger - Auto-exorcism for bugs. Captures, reproduces, and fixes errors automatically using Kilo Cloud Agents.",
  "main": "dist/cli/index.js",
  "bin": {
    "kilo-ghost": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "debug",
    "debugger",
    "error",
    "bug",
    "kilo",
    "ai",
    "cli",
    "devtools"
  ],
  "author": "Rodrigo Guedes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodrigoguedes09/ghost-debugger"
  },
  "devDependencies": {
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "inquirer": "^13.2.5",
    "ora": "^9.3.0",
    "uuid": "^13.0.0"
  }
}
